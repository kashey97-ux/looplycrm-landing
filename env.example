# Paddle checkout URLs (public)
NEXT_PUBLIC_PADDLE_STARTER_CHECKOUT_URL=
NEXT_PUBLIC_PADDLE_GROWTH_CHECKOUT_URL=
NEXT_PUBLIC_PADDLE_PRO_CHECKOUT_URL=

# Lead form email delivery (Zoho SMTP)
LEAD_TO_EMAIL=support@looplycrm.com
SMTP_HOST=smtp.zoho.eu
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=support@looplycrm.com
SMTP_PASS=
SMTP_FROM=Looply <support@looplycrm.com>

# Optional fallback provider (Resend)
# If EMAIL_PROVIDER=resend OR RESEND_API_KEY is set, /api/lead will send via Resend instead of SMTP.
# Note: RESEND requires a verified sender; we will reuse SMTP_FROM (or SMTP_USER) as the Resend "from".
EMAIL_PROVIDER=
RESEND_API_KEY=

# Engine API (required for /app product UI)
# Base URL of your Engine, e.g. https://engine.looplycrm.com (no trailing slash).
# The /app UI will call: ${NEXT_PUBLIC_ENGINE_API_URL}/v1/* with Authorization: Bearer <sessionToken>.
NEXT_PUBLIC_ENGINE_API_URL=

